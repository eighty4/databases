{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": false,
    "isolatedModules": true,
    "noEmit": false,
    "noEmitOnError": true,
    "outDir": "lib",
    "rootDir": "src",
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts"
  ]
}
